<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#09021F"
    tools:context="com.example.waleed.firebasestartup.MainActivity">

    <LinearLayout

        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout3"
        android:weightSum="1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            app:srcCompat="@drawable/next"
            android:id="@+id/imageView"
            android:paddingTop="15dp" />

        <TextView
            android:textAlignment="center"
            android:textSize="20sp"
            android:text="Create Your Account"
            android:textColor="#09031E"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:background="#30D139"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Name"
            android:textColor="#6A6F86"
            android:textColorHint="#6A6F86"
            android:id="@+id/editTextName"
            android:layout_margin="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="Enter Your Email"
            android:textColor="#6A6F86"
            android:textColorHint="#6A6F86"
            android:id="@+id/editTextEmail"
            android:layout_margin="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Enter Your Password"
            android:textColor="#6A6F86"
            android:textColorHint="#6A6F86"
            android:id="@+id/editTextPassword"
            android:layout_margin="20dp" />

        <EditText
            android:inputType="textPassword"
            android:hint="Confirm Password"
            android:textColor="#6A6F86"
            android:textColorHint="#6A6F86"
            android:id="@+id/editTextConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp" />

        <Button
            android:textAlignment="center"
            android:text="Register"
            android:textStyle="bold"
            android:textColor="#09031E"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="@drawable/emptybutton"
            android:id="@+id/buttonRegister"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp" />

        <TextView
            android:textAlignment="center"
            android:text="Already Registerd ? Sign in here "
            android:textColor="#6A6F86"
            android:id="@+id/textViewSignin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp" />


    </LinearLayout>
<android.support.design.widget.NavigationView


    android:layout_height="match_parent"
    android:layout_width="wrap_content"
    app:menu="@menu/navigation_menu"
    app:itemTextColor="#6A6F86"
    android:background="#0D0326"
    android:layout_gravity="start">


</android.support.design.widget.NavigationView>



</android.support.v4.widget.DrawerLayout>
